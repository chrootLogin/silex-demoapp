{% extends '@rootLoginDemoApp/layout.html.twig' %}

{% block title %}DemoApp{% endblock %}

{% block content %}
    <section class="row">
        <div class="col-md-12">
            <h1>DemoApp</h1>

            <p>
                This is an app to demonstrate some silex providers.
            </p>
        </div>
    </section>
    <section>
        <div class="row">
            <div class="col-md-12">
                <h2>UserProvider</h2>
                <p>
                    <a href="https://github.com/chrootLogin/silex-userprovider">GitHub</a> | <a href="https://packagist.org/packages/rootlogin/silex-userprovider">Packagist</a>
                </p>
                <p>
                    You can test the UserProvider either with the credentials at the bottom or after registering an account yourself. Please be aware that the database will be reset once an hour.
                </p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <h3>User</h3>
                <p>
                    E-Mail: <i>testuser@example.com</i><br>
                    Password: <i>TestUser</i>
                </p>
            </div>
            <div class="col-md-6">
                <h3>Admin User</h3>
                <p>
                    E-Mail: <i>adminuser@example.com</i><br>
                    Password: <i>AdminUser</i>
                </p>
            </div>
        </div>
    </section>
{% endblock %}